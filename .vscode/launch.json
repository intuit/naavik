    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/main.go",
            "args": [
                "--log_level", "trace",
                "--config_resolver", "secret",
                "--state_checker", "none",
                "--config_path", "${workspaceRoot}/config/config.yaml",
                "--kube_config", "${workspaceRoot}/kube_config.yaml",
            ]
        }
    ]
}