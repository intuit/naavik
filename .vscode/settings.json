{
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "go.lintOnSave": "package",
  "gopls": {
    "formatting.gofumpt": true,
    "ui.semanticTokens": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.go$",
        "cmd": "export PATH=$HOME/go/bin && golines ${file} -w -m 290"
      }
    ]
  },
}
